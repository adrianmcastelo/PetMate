<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.animals.DetailActivity"
    android:showDividers="middle">

    <ImageView
        android:id="@+id/protectora_image"
        android:layout_width="fill_parent"
        android:layout_height="325dp"
        android:adjustViewBounds="true"
        android:src="@drawable/baseline_image_24"
        android:contentDescription="Protectora Image"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="14dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/protectora_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="Protectora name"
            android:textColor="@color/black"
            android:textSize="32sp"
            android:lines="2"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">
            <ImageView
                android:id="@+id/icon_phone"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/baseline_local_phone_24"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"/>
            <TextView
                android:id="@+id/protectora_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="-"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:lines="1" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">
            <ImageView
                android:id="@+id/icon_mail"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/baseline_mail_outline_24"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"/>
            <TextView
                android:id="@+id/protectora_mail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:lines="1" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">
            <ImageView
                android:id="@+id/icon_web"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/baseline_alternate_email_24"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"/>
            <TextView
                android:id="@+id/protectora_web"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="-"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:lines="1" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="10dp"
            android:layout_marginHorizontal="4dp"
            android:background="@color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/icon_location"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/baseline_location_on_24"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"/>
            <TextView
                android:id="@+id/protectora_location"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="-"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:lines="1"
                android:gravity="center_vertical"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Acerca de la protectora"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:lines="1"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="2dp"/>

        <TextView
            android:id="@+id/protectora_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="-"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:lines="5"
            android:layout_marginLeft="2dp"/>

    </LinearLayout>

</LinearLayout>